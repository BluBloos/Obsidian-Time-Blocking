{
    "env": {
        "node": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "valid-jsdoc": [
            "error", 
            {
                "requireReturn": false,
                "requireReturnType": false,
                "requireParamType": false
            }
        ],
        "@typescript-eslint/explicit-function-return-type": ["error"]
    }
}
